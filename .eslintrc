{
  "parser": "babel-eslint",
  "extends": "appium",
  "plugins": [
    "import",
    "react",
    "react-native",
    "shopify"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "import/no-unresolved": [2, {"ignore": ["electron"]}],
    "babel/arrow-parens": 0,
    "require-await": 2,
    "shopify/jsx-no-hardcoded-content": [2, {
      "checkProps": ["tab", "placeholder", "addonBefore", "addonAfter", "title", "header"]
    }],
    "react-native/no-inline-styles": 2
  }
}
