{
  "parser": "babel-eslint",
  "extends": "appium",
  "plugins": [
    "import",
    "react",
    "shopify"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "import/no-unresolved": [2, {"ignore": ["electron"]}],
    "babel/arrow-parens": 0,
    "require-await": 2,
    "shopify/jsx-no-hardcoded-content": 2
  }
}
